<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#24bfd6"
android:orientation="vertical">

        <ImageView
            android:src="@drawable/med_minder"
            android:layout_width="400dp"
            android:layout_height="500dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mid_minder_title"
            android:layout_above="@+id/Main_Button_2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_marginBottom="333dp" />

        <Button
            android:id="@+id/drugButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine"
            android:layout_marginTop="425dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/Main_Button_2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Add Medication"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/drugButton"
            android:layout_centerHorizontal="true" />

</RelativeLayout>







